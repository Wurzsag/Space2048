<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="gameText">
        <item name="fontFamily">@font/share_tech_mono</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0.2</item>
        <item name="android:shadowDy">0.2</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="scoreText">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="fontFamily">@font/share_tech_mono</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">26sp</item>
        <item name="android:shadowColor">#FF0015</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="highscoreText">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/share_tech_mono</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">#00F7FF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">8</item>
    </style>

</resources>
